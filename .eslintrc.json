{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "quotes": ["error", "single"],
        "comma-dangle": ["error", "never"],
        "indent": ["error", 2, { "SwitchCase": 1 }],
        "object-curly-spacing": ["error", "always"],
        "max-len": ["error", { "code": 120 }],
        "linebreak-style": "off",
        "require-jsdoc": "off",
        "new-cap": "off"
    }
}
